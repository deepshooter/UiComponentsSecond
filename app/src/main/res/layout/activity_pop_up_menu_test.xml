<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.deepshooter.uicomponentssecond.dialogfragment.popupmenu.PopUpMenuTestActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/teal"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Simple PopUp Menu"
        android:layout_gravity="center"
        android:id="@+id/simplePopup"
        android:padding="15dp"
        />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/teal"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Custom PopUp Menu"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/customPopup"
        android:padding="15dp"
        />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/teal"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:text="PopUp Menu With Icon"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/popUpWithIcon"
        android:padding="15dp"
        />

</LinearLayout>
